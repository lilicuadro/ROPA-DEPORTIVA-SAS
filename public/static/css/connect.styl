body
	background-color #f6f6f6
	font-size 14px
	margin 0px


.box
	background-color #fff
	border-radius 8px
	border 1px solid #d6d6d6
	position absolute
	width 500px
	.btn-success
		background-color #E85722
		width 100%
		border 0px
	.form-control
		&:focus
		&:active
			outline none
			box-shadow none
	.inside
		padding 16px 
	.header
		border-radius 8px 8px 0px
		padding 16px 
		a
			img
				display block
				margin 0px auto
				width 36%
	.footer
		text-align center
		a
			display inline-block
			font-size .8em
			&:last-child
				margin-left 24px
				
.mtop16
	margin-top 16px
	

.box_login
	left calc(50% - 250px)
	top calc(50% - 191px)

.box_register
	left calc(50% - 250px)
	top calc(50% - 319px)

